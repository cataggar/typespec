{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../compiler-show/dist"
    ]
  },
  "include": [
    "src/**/*.ts",
    "../../compiler-show/dist/index.d.ts"
  ]
}
